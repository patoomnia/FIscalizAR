<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿QUÉ DESEA HACER?"
        android:id="@+id/textQueDeseaHacer"
        android:textSize="30sp"
        android:textColor="#000000"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nuevo Escrutinio"
        android:id="@+id/btnNvoEscrut"
        android:layout_marginTop="81dp"
        android:textSize="22dp"
        android:layout_below="@+id/textQueDeseaHacer"
        android:layout_centerHorizontal="true" />;/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escrutinios anteriores"
        android:id="@+id/btnAnteriores"
        android:layout_marginTop="57dp"
        android:textSize="22dp"
        android:layout_below="@+id/btnNvoEscrut"
        android:layout_centerHorizontal="true" />

</RelativeLayout>